<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="sidebar">
    <h2>Chats</h2>
    <a class="chat-link" href="/create-chat">Start New Chat</a>
    <div class="chat-list">
      <% chats.forEach(chat => { %>
        <a class="chat-link" href="/chat/<%= chat._id %>">Chat <%= chat._id %></a>
      <% }); %>
    </div>
  </div>
  <div class="container">
    <h1>Chat</h1>
    <div class="chat-container">
      <% chat.messages.forEach(message => { %>
        <div class="message-container <%= message.role %>">
          <div class="message <%= message.role %>">
            <p><%= message.content %></p>
          </div>
        </div>
      <% }); %>
    </div>
    <form action="/chat/<%= chat._id %>" method="POST">
      <textarea name="message" rows="3" required></textarea>
      <button type="submit">Send</button>
    </form>
  </div>
</body>
</html>
